<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        android:layout_height="match_parent">




        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="100"
            android:background="@android:color/black" />

        <!--
        <TextView
            android:visibility="invisible"
            android:id="@+id/lbl_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    -->

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"


            android:background="#000000"
            android:layout_height="70dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="#000000"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">
                    <TextView
                        android:textSize="12sp"
                        android:text="this is simple text"
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp" />

                    <TextView
                        android:textSize="12sp"
                        android:text="12.6.12"
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="5dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="100"
            android:background="#000000"
            >

            <View
                android:layout_width="0dp"
                android:layout_weight="26"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="16"
                android:layout_height="match_parent">

                <ImageButton
                    android:background="#000000"
                    android:src="@drawable/facebook_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:id="@+id/button_facebook"
                    android:baselineAlignBottom="false"
                    android:cropToPadding="false"
                    android:clickable="true"
                    android:padding="8dp"
                    android:onClick="facebook_open" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="16"
                android:layout_height="match_parent">
                <ImageButton
                    android:background="#000000"
                    android:src="@drawable/website_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:id="@+id/button_website"
                    android:baselineAlignBottom="false"
                    android:cropToPadding="false"
                    android:clickable="true"
                    android:padding="6dp"
                    android:onClick="ag_website_open" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="16"
                android:layout_height="match_parent">
                <ImageButton
                    android:background="#000000"
                    android:src="@drawable/rate_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:id="@+id/button_rate"
                    android:baselineAlignBottom="false"
                    android:cropToPadding="false"
                    android:clickable="true"
                    android:padding="5dp"
                    android:onClick="rate_app" />
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_weight="26"
                android:layout_height="match_parent"/>

        </LinearLayout>



    </LinearLayout>




    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab3"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        app:srcCompat="@drawable/set_as_wallpaper_floating"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/fab2"
        android:layout_alignLeft="@+id/fab2"
        android:layout_alignStart="@+id/fab2"
        app:rippleColor="#646464"
        app:backgroundTint="#cccccc"
        android:layout_marginBottom="42dp"
        android:layout_marginRight="37dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        app:srcCompat="@drawable/download_icon_floating"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/fab1"
        android:layout_alignLeft="@+id/fab1"
        android:layout_alignStart="@+id/fab1"
        app:rippleColor="#646464"
        app:backgroundTint="#cccccc"
        android:layout_marginBottom="42dp"
        android:layout_marginRight="37dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        app:srcCompat="@drawable/share_icon_floating"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/fab"
        android:layout_alignLeft="@+id/fab"
        android:layout_alignStart="@+id/fab"
        app:rippleColor="#646464"
        app:backgroundTint="#cccccc"
        android:layout_marginBottom="42dp"
        android:layout_marginRight="37dp" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        app:srcCompat="@drawable/plus_sign_floating"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:backgroundTint="#ffffff"
        android:layout_marginBottom="42dp"
        android:layout_marginRight="37dp" />




</RelativeLayout>